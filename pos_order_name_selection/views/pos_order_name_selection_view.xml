<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="pos_order_name_selection_inherit_pos_congif_view" model="ir.ui.view">
			<field name="name">POS configuration</field>
			<field name="model">pos.config</field>
			<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//h2[@name='order']/following-sibling::div[1]" position="inside">
					<div class="col-xs-12 col-md-6 o_setting_box" >
						<div class="o_setting_right_pane">
							<label for="max_order_shows"/>
							<div class="text-muted">
								If number of orders limit exceed then order will be shown in dropdown list
							</div>
							<div class="content-group mt16">
								<field name="max_order_shows"/>
							</div>
						</div>
					</div>
 				</xpath>
			</field>
		</record>
	</data>
</odoo>